---
import '../styles/global.css'
import Footer from './Footer.astro'

const { title = 'Endurance Enjoyers', description = 'Endurance Enjoyers - A community for endurance sports enthusiasts.' } = Astro.props
---
  <html lang="es">
    <head>
      <title>{title}</title>
      <meta charset='UTF-8' />
      <meta name='viewport' content='width=device-width, initial-scale=1.0' />
      <meta name='description' content={description} />
      <meta property='og:title' content={title} />
      <meta property='og:description' content={description} />
      <meta property='og:type' content='website' />
      <meta name='robots' content='index, follow' />
      <meta name='author' content='Endurance Enjoyers' />
      <meta name='theme-color' content='#171915' />
      <!-- Preload critical resources -->
      <link rel='preload' href='/logotextclear.webp' as='image' type='image/webp' />
      <!-- Preconnect to external domains -->
      <link rel='preconnect' href='https://res.cloudinary.com' />
      <link rel='dns-prefetch' href='https://res.cloudinary.com' />
      <!--meta property='og:image' content='https://misitio.com/imagen.jpg' />
      <meta property='og:url' content='https://endurance.com' />
      <meta name='twitter:card' content='summary_large_image' />-->
      <link rel='icon' href='/logo.webp' />
    </head>
    <body class="flex flex-col min-h-screen">
      <div class="flex-grow">
        <slot />
      </div>  
    </body>
    <Footer>
  </html>
