---
export interface Props {
  label: string;
  id: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'radio';
  values?: string[];
  required?: boolean;
  rows?: number;
  isTextarea?: boolean;
  placeholder?: string;
  class?: string;
}

const {
  label,
  id,
  name,
  type = 'text',
  required = false,
  rows,
  isTextarea = false,
  placeholder,
  values = [],
  class: className = ''
} = Astro.props;
---

  <div class={className}>
    <label for={id} class='block mb-1 font-semibold'>{label}</label>

    {
    isTextarea
      ? (
        <textarea
          id={id}
          name={name}
          rows={rows || 4}
          required={required}
          placeholder={placeholder}
          class='w-full px-4 py-2 bg-white/10 border border-white/30 rounded-md focus:outline-none focus:ring-2 focus:ring-hover'
        />
        )
      : (
        type === 'radio'
          ? values.map(value => (
            <label class='inline-flex items-center mr-6'>
              <input
                type='radio'
                name={name}
                value={value}
                required={required}
                class='form-radio text-hover mr-2'
              />
              {value}
            </label>
          ))
          : (
            <input
              id={id}
              name={name}
              type={type}
              required={required}
              placeholder={placeholder}
              class='w-full px-4 py-2 bg-white/10 border border-white/30 rounded-md focus:outline-none focus:ring-2 focus:ring-hover'
            />
          )
      )
  }
  </div>
