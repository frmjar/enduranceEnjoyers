---
import Icon from '../icons/Icon.astro'
import Card from './Card.astro'

const { id, class: className } = Astro.props
---

  <section id={id} class={`py-20 ${className || ''}`}>
    <div class='container mx-auto px-4'>
      <div class='max-w-7xl mx-auto'>

        <div class='text-center mb-16'>
          <h2 class='text-4xl md:text-5xl font-bold text-text-primary mb-4'>
            Novedades y Logros
          </h2>
          <p class='text-lg text-text-secondary max-w-2xl mx-auto'>
            Mantente al día con nuestros últimos logros y próximos eventos
          </p>
        </div>

        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>

          <Card
            title='Próxima Carrera de Resistencia'
            description='¡Nos complace anunciar la próxima carrera de resistencia que se llevará a cabo el 15 de marzo!'
            date='15 Mar 2024'
            icon='calendar'
            iconColor='bg-orange-500'
          />

          <Card
            title='Logro Destacado'
            description='Felicitaciones a Juan por completar su primer maratón con un tiempo impresionante de 3 horas y 30 minutos.'
            date='10 Mar 2024'
            icon='trophy'
            iconColor='bg-orange-500'
          />

          <Card
            title='24 Horas de Daytona'
            description='Resultados excepcionales en las 24 horas de Daytona con múltiples posiciones en el podio.'
            date='28 Feb 2024'
            icon='flag'
            iconColor='bg-orange-500'
            results={[
              '1º posición equipo azul',
              '3º posición equipo azul',
              '5º posición equipo azul'
            ]}
          />

          <Card
            title='Contenido Personalizado'
            date='01 Mar 2024'
            icon='trophy'
            iconColor='bg-green-500'
            class='md:col-span-2 lg:col-span-1'
          >
            <div class='mt-4'>
              <p class='text-text-secondary mb-4'>Este es contenido personalizado usando el slot:</p>
              <img src='/logo.webp' alt='Logo' class='w-full h-32 object-contain opacity-80 rounded-lg bg-slate-700/30' />
            </div>
          </Card>

          <Card class='md:col-span-2 lg:col-span-2'>
            <div class='text-center py-8'>
              <div class='w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-full flex items-center justify-center mx-auto mb-4'>
                <Icon name='checkCircle' size='lg' class='text-text-primary' />
              </div>
              <h3 class='text-xl font-semibold text-text-primary mb-2'>¡Únete al Equipo!</h3>
              <p class='text-text-secondary mb-4'>¿Listo para formar parte de Endurance Enjoyers?</p>
              <button class='bg-gradient-to-r from-orange-500 to-red-600 hover:from-orange-600 hover:to-red-700 text-white font-semibold px-6 py-2 rounded-lg transition-all duration-300 transform hover:scale-105'>
                Contactar
              </button>
            </div>
          </Card>

        </div>
      </div>
    </div>
  </section>
