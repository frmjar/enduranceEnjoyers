---
import Contacto from '../components/Contacto.astro'
import Galeria from '../components/Galeria.astro'
import HeaderExtended from '../components/HeaderExtended.astro'
import Layaut from '../components/Layaut.astro'
import NovedadesLogros from '../components/NovedadesLogros.astro'
import TeamDescription from '../components/TeamDescription.astro'

const seoData = {
  title: 'Endurance Enjoyers - Equipo de Carreras de Resistencia en iRacing',
  description: 'Únete a Endurance Enjoyers, el equipo líder en carreras de resistencia en iRacing. Participa en las 24 Horas de Daytona, Le Mans y más eventos épicos de motorsport virtual.',
  keywords: 'iRacing, carreras resistencia, endurance racing, 24 horas Daytona, Le Mans, equipo carreras, simulador carreras, motorsport virtual, España',
  canonicalUrl: 'https://enduenjoyers.es/'
}
---
  <Layaut {...seoData}>
    <HeaderExtended id='home' />
    <TeamDescription />
    <NovedadesLogros id='novedades' class='scroll-mt-20' />
    <Galeria id='galeria' class='scroll-mt-20 bg-slate-900 py-4' />
    <Contacto id='contacto' class='scroll-mt-20 py-4' />
  </Layaut>
